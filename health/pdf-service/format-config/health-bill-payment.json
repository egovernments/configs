{
    "key": "health-bill-payment",
    "config": {
        "pageSize": "A4",
        "pageOrientation": "landscape",
        "defaultStyle": {
            "font": "Cambay"
        },
        "content": [
            {
                "style": "header",
                "alignment": "center",
                "fillColor": "#FCE5CD",
                "table": {
                        "widths": ["100%"],
                        "body": [
                            [
                                { "text": "{{reportTitle}}"}
                            ]
                        ]
                    }
            },
            {
                "style": "table-style",
                "fillColor": "#ECFFDC",
                "table": {
                    "widths": [
                        "25%",
                        "25%",
                        "25%",
                        "25%"
                    ],
                    "body": [
                        [
                            { "text": "{{label_campaign_name}}", "style": "subheader", "margin": [0, 0, 0, 0] },
                            { "text": "{{campaignName}}" },
                            { "text": "{{label_total_amount_to_process}}", "style": "subheader", "margin": [0, 0, 0, 0] },
                            { "text": "{{totalAmount}}", "style": "subheaderNumer" }
                        ],
                        [
                            {},
                            {},
                            { "text": "{{label_total_number_of_workers}}", "style": "subheader", "margin": [0, 0, 0, 0] },
                            { "text": "{{numberOfIndividuals}}", "style": "subheaderNumer" }
                        ]
                    ]
                }
              
            },
        
            {
                "style": "table-style",
                "table": {
                    "headerRows": 1,
                    "widths": ["4%", "11%", "11%", "11%", "15%", "8%", "5%", "5%", "7%", "7%", "8%", "8%"],
                    "body": [
                        [
                            {
                                "style": "table-header",
                                "text": "{{label_table_header_serial_number}}"
                            },
                            {
                                "style": "table-header",
                                "text": "{{label_table_header_individual_name}}"
                            },
                            {
                                "style": "table-header",
                                "text": "{{label_table_header_role}}"
                            },
                            {
                                "style": "table-header",
                                "text": "{{label_table_header_boundary_name}}"
                            },
                            {
                                "style": "table-header",
                                "text": "{{label_table_header_id_number}}"
                            },
                            {
                                "style": "table-header",
                                "text": "{{label_table_header_mobile_number}}"
                            },
                            {
                                "style": "table-header",
                                "text": "{{label_table_header_wage}}"
                            },
                            {
                                "style": "table-header",
                                "text": "{{label_table_header_food}}"
                            },
                            {
                                "style": "table-header",
                                "text": "{{label_table_header_transportation}}"
                            },
                            {
                                "style": "table-header",
                                "text": "{{label_table_header_total_wage}}"
                            },
                            {
                                "style": "table-header",
                                "text": "{{label_table_header_number_of_days}}"
                            },
                            {
                                "style": "table-header",
                                "text": "{{label_table_header_total_amount_to_pay}}"
                            }
                        ],
                        "{{#billDetails}}[{\"text\":\"{{slNo}}\",\"style\":\"sl-no\"},{\"text\":\"{{individualName}}\",\"style\":\"table-content-text\"},{\"text\":\"{{role}}\",\"style\":\"table-content-text\"},{\"text\":\"{{locality}}\",\"style\":\"table-content-text\"},{\"text\":\"{{idNumber}}\",\"style\":\"table-content-text\"},{\"text\":\"{{mobileNumber}}\",\"style\":\"table-content-text\"},{\"text\":\"{{wageAmount}}\",\"style\":\"table-content-number\"},{\"text\":\"{{foodAmount}}\",\"style\":\"table-content-number\"},{\"text\":\"{{transportAmount}}\",\"style\":\"table-content-number\"},{\"text\":\"{{totalWages}}\",\"style\":\"table-content-number\"},{\"text\":\"{{totalNumberOfDays}}\",\"style\":\"table-content-number\"},{\"text\":\"{{totalAmount}}\",\"style\":\"table-content-number\"}]{{/billDetails}}",
                        [{},{},{},{},{},{},{},{},{},{},{ "text": "{{label_table_footer_total_amount}}", "style": "totalRow" }, { "text": "{{totalAmount}}", "style": "totalRowAmount" }]
                    ]
                }
            },
            {
                "layout": "noBorders",
                "margin": [0, 10, 0, 40],
                "table": {
                    "widths": ["5%", "30%", "30%", "30%", "5%"],
                    "body": [
                        [
                            {},
                            { "text": "{{label_payment_adv_prepared_by}}", "style": "reportEndText" },
                            { "text": "{{label_payment_adv_verified_by}}", "style": "reportEndText" },
                            { "text": "{{label_payment_adv_approved_by}}", "style": "reportEndText" },
                            {}
                        ]
                    ]
                }
            },
            {
                "layout": "noBorders",
                "table": {
                    "widths": ["5%", "20%", "75%"],
                    "body": [
                        [
                            {},
                            { "text": "{{label_payment_adv_report_run_dt_time}}", "style": "reportEndText" },
                            { "text": "{{createdTime}}", "style": "reportEndText" }
                        ],
                        [
                            {},
                            { "text": "{{label_payment_adv_report_run_by}}", "style": "reportEndText" },
                            { "text": "{{createdBy}}", "style": "reportEndText" }
                        ]
                    ]
                }
            }
        ],
        "footer": "(function(currentPage, pageCount) { return { text: 'Page ' + currentPage + ' of ' + pageCount, alignment: 'right', margin: [0, 0, 20, 0] }; })",
        "styles": {
            "header": {
              "fontSize": 16,
              "bold": true
            },
            "subheader": {
              "fontSize": 12,
              "bold": true
            },
            "subheaderNumer": {
              "fontSize": 12,
              "bold": true,
              "alignment": "right"
            },
            "table-style": {
                "margin": [0, 0, 0, 0]
            },
            "table-header": {
              "bold": true,
              "fontSize": 10,
              "color": "black",
              "fillColor": "#c9daf8",
              "alignment": "center"
            },
            "sl-no": {
                "fillColor": "#d4d4d4",
                "bold": true,
                "alignment": "left",
                "fontSize": 9
            },
            "table-content-text": {
                "alignment": "left",
                "fontSize": 9
            },
            "table-content-number": {
                "alignment": "right",
                "fontSize": 9
            },
            "totalRow": {
                "bold": true,
                "alignment": "left",
                "fontSize": 10
            },
            "totalRowAmount": {
                "bold": true,
                "alignment": "right",
                "fontSize": 10
            },
            "reportEndText": {
                "alignment": "left",
                "fontSize": 10
            }
          }
    }
}